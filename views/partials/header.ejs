<script>
    $(document).ready(function() {
        // Hides the sub-menu item if anchors are not found within them
        $('.nested').each(function() {
            if ($(this).find('.navbar-sub-item').length > 0) {
                $(this).show();
            } else {
                $(this).parent('.navbar-dropdown').hide();
            }
        });
        
        // Hides the menu item if navbar-dropdown are not found within them
        $('.header-menu').each(function() {
            if ($(this).find('.navbar-dropdown:not([style*="display: none"])').find('.navbar-item').length > 0) {
                $(this).show();
            } else {
                $(this).hide();
            }
        });
    });
</script>

